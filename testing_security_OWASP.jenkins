pipeline {
    agent any
    environment {
        ZAP_DOCKER_IMAGE = 'zaproxy/zap-stable'
        TARGET_URL = 'http://35.214.164.86' //
        REPORT_NAME = 'zap_report.html'
        REPORT_PATH = '/jenkins/chilla'
    }
    stages {
               
        stage('Start ZAP Scan') {
            steps {
                script {
                    sh """
                    docker run --rm -v \$(pwd):/zap/wrk:rw \
                        ${ZAP_DOCKER_IMAGE} zap-baseline.py -t ${TARGET_URL} -g gen.conf -r ${REPORT_NAME}
                    """
                }
            }
        }
        
        stage('Publish Report') {
            steps {
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: "${REPORT_PATH}",
                    reportFiles: "${REPORT_NAME}",
                    reportName: 'OWASP ZAP Security Report'
                ])
            }
        }
    }
}
